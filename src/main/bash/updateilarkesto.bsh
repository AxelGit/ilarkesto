#!/bin/bash

TMP_DIR=~/ilarkesto-install-tmp

mkdir $TMP_DIR
cd $TMP_DIR

wget https://servisto.de/projects/ilarkesto/ilarkesto.tbz
if [ $? != 0 ]; then exit 1; fi

rm -rf /opt/ilarkesto
if [ $? != 0 ]; then exit $?; fi

tar -xvzf ilarkesto.tar.gz -C /opt
if [ $? != 0 ]; then exit $?; fi

rm -rf $TMP_DIR